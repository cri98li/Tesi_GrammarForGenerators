{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "date": {
            "type": "string",
            "pattern": "^(\\d{4}(?!\\d{2}\\b))((-)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6]))))$"
        },
        "name": {
            "type": "string",
            "pattern": "^(?!.*[\u042b\u042a\u042d\u0401\u044b\u044a\u044d\u0451@%&$^#])[a-zA-Z\u0410-\u042f\u0490\u0407\u0406\u0404\u0430-\u044f\u0491\u0457\u0456\u04540-9\u2116\\\"!\\^\\*)\\]\\[(._-].*$"
        },
        "education": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string",
                    "description": "Dictionary: COUNTRY"
                },
                "city": {
                    "$ref": "#/definitions/name"
                },
                "institution_name": {
                    "$ref": "#/definitions/name"
                },
                "issued_date": {
                    "$ref": "#/definitions/date"
                },
                "diploma_number": {
                    "type": "string",
                    "minLength": 1
                },
                "degree": {
                    "type": "string",
                    "description": "Dictionary: EDUCATION_DEGREE"
                },
                "speciality": {
                    "$ref": "#/definitions/name"
                }
            },
            "required": [
                "country",
                "city",
                "institution_name",
                "diploma_number",
                "degree",
                "speciality"
            ],
            "additionalProperties": false
        },
        "qualification": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Dictionary: QUALIFICATION_TYPE"
                },
                "institution_name": {
                    "$ref": "#/definitions/name"
                },
                "speciality": {
                    "$ref": "#/definitions/name"
                },
                "issued_date": {
                    "$ref": "#/definitions/date"
                },
                "certificate_number": {
                    "$ref": "#/definitions/name"
                },
                "valid_to": {
                    "$ref": "#/definitions/date"
                },
                "additional_info": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "type",
                "institution_name",
                "speciality"
            ],
            "additionalProperties": false
        },
        "specialities": {
            "type": "object",
            "properties": {
                "speciality": {
                    "type": "string",
                    "description": "Dictionary: SPECIALITY_TYPE"
                },
                "speciality_officio": {
                    "type": "boolean"
                },
                "level": {
                    "type": "string",
                    "description": "Dictionary: SPECIALITY_LEVEL"
                },
                "qualification_type": {
                    "type": "string",
                    "description": "Dictionary: SPEC_QUALIFICATION_TYPE"
                },
                "attestation_name": {
                    "$ref": "#/definitions/name"
                },
                "attestation_date": {
                    "$ref": "#/definitions/date"
                },
                "valid_to_date": {
                    "$ref": "#/definitions/date"
                },
                "certificate_number": {
                    "$ref": "#/definitions/name"
                }
            },
            "required": [
                "speciality",
                "speciality_officio",
                "level"
            ],
            "additionalProperties": false
        },
        "science_degree": {
            "type": "object",
            "properties": {
                "country": {
                    "type": "string",
                    "description": "Dictionary: COUNTRY"
                },
                "city": {
                    "$ref": "#/definitions/name"
                },
                "degree": {
                    "type": "string",
                    "description": "Dictionary: SCIENCE_DEGREE"
                },
                "institution_name": {
                    "$ref": "#/definitions/name"
                },
                "diploma_number": {
                    "type": "string",
                    "minLength": 1
                },
                "speciality": {
                    "$ref": "#/definitions/name"
                },
                "issued_date": {
                    "$ref": "#/definitions/date"
                }
            },
            "required": [
                "country",
                "city",
                "degree",
                "institution_name",
                "diploma_number",
                "speciality"
            ],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "educations": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/education"
            },
            "minItems": 1
        },
        "qualifications": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/qualification"
            },
            "minItems": 1
        },
        "specialities": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/specialities"
            },
            "minItems": 1
        },
        "science_degree": {
            "$ref": "#/definitions/science_degree"
        }
    },
    "required": [
        "educations",
        "specialities"
    ]
}