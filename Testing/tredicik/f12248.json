{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": false,
    "title": "Root schema.",
    "properties": {
        "serial": {
            "type": "integer",
            "multipleOf": 1,
            "minimum": 1
        },
        "license": {
            "type": "string",
            "enum": [
                "http://opensource.org/licenses/MIT"
            ]
        },
        "authors": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "additionalItems": false,
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "providers": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "additionalItems": false,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "domains": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "additionalItems": false,
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "website": {
                        "type": "string",
                        "minLength": 1
                    },
                    "icon": {
                        "type": "string",
                        "minLength": 1
                    },
                    "inbox": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": [
                    "name",
                    "domains",
                    "website",
                    "icon",
                    "inbox"
                ]
            }
        }
    },
    "required": [
        "serial",
        "license",
        "authors",
        "providers"
    ]
}