{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "List of Pokemon Evolutions",
    "description": "Schema that describe a list of Pokemon evolutions",
    "type": "array",
    "items": {
        "title": "An evolution",
        "type": "object",
        "properties": {
            "pokemon_id": {
                "description": "Identifier of the Pokemon",
                "type": "number"
            },
            "evolution_id": {
                "description": "Identifier of the evolution",
                "type": "number"
            },
            "candies": {
                "description": "Number of candies required to evoluate",
                "type": "number"
            },
            "objects": {
                "description": "Special object required to evoluate (if any)",
                "type": "string"
            }
        },
        "required": [
            "pokemon_id",
            "evolution_id",
            "candies"
        ]
    }
}