{
    "$schema": "http://json-schema.org/draft-04/hyper-schema#",
    "type": "object",
    "title": "FAOSTAT API",
    "description": "",
    "definitions": {
        "api_key": {
            "type": "string",
            "title": "API Key",
            "description": "Not available in Version 1.0."
        },
        "client_key": {
            "type": "string",
            "title": "Client Key",
            "description": "Not available in Version 1.0."
        },
        "datasource": {
            "type": "string",
            "title": "Datasource",
            "description": "Name code of the datasource.",
            "enum": [
                "faostat"
            ],
            "default": "faostat"
        },
        "lang": {
            "type": "string",
            "title": "Language",
            "description": "Language of the data retrieved.",
            "enum": [
                "en",
                "fr",
                "es"
            ],
            "default": "en"
        },
        "faostat_code": {
            "type": "object",
            "title": "FAOSTAT Code",
            "description": "Code used in the FAOSTAT codelists.",
            "properties": {
                "code": {
                    "$ref": "#/definitions/code"
                },
                "label": {
                    "$ref": "#/definitions/label"
                },
                "ord": {
                    "$ref": "#/definitions/ord"
                },
                "description": {
                    "$ref": "#/definitions/description"
                },
                "children": {
                    "type": "array",
                    "title": "Children",
                    "description": "Hierarchical codes.",
                    "items": {
                        "$ref": "#/definitions/faostat_code"
                    }
                }
            }
        },
        "code": {
            "type": "string",
            "title": "Code",
            "description": "Object's code."
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "Object's description."
        },
        "label": {
            "type": "string",
            "title": "Label",
            "description": "Object's label."
        },
        "ord": {
            "type": "integer",
            "title": "Ord",
            "description": "Object's order."
        },
        "dimension": {
            "type": "object",
            "title": "Dimension",
            "description": "Object representing a single dimension of a FAOSTAT dataset.",
            "properties": {
                "ord": {
                    "$ref": "#/definitions/ord"
                },
                "id": {
                    "$ref": "#/definitions/code"
                },
                "label": {
                    "$ref": "#/definitions/label"
                },
                "parameter": {
                    "type": "string",
                    "title": "Procedure Parameter",
                    "description": "Name of the procedure's parameter mapped to this dimenison."
                },
                "description": {
                    "$ref": "#/definitions/description"
                },
                "service": {
                    "type": "string",
                    "title": "Service",
                    "description": "Relative link to the service capable to provide codes for the current dimension."
                },
                "subdimensions": {
                    "type": "array",
                    "title": "Subdimensions",
                    "description": "Codelists composing the current one.",
                    "items": {
                        "$ref": "#/definitions/dimension",
                        "title": "Subdimension"
                    }
                }
            }
        },
        "metadata": {
            "type": "object",
            "title": "Metadata",
            "description": "Meta information about the request.",
            "properties": {
                "datasource": {
                    "type": "string",
                    "title": "Datasource",
                    "description": "Name of the datasource. Default: 'faostat'.",
                    "default": "faostat"
                },
                "output_type": {
                    "type": "string",
                    "title": "Output Type",
                    "description": "Type of the output: 'objects' or 'arrays'. Default: 'objects'.",
                    "default": "objects"
                },
                "api_key": {
                    "type": "string",
                    "title": "API Key",
                    "description": "Not available in Version 1.0."
                },
                "client_key": {
                    "type": "string",
                    "title": "Client Key",
                    "description": "Not available in Version 1.0."
                },
                "parameters": {
                    "type": "array",
                    "title": "Parameters",
                    "description": "Procedure parameters.",
                    "items": {
                        "type": "string",
                        "title": "Parameter",
                        "description": "Procedure parameter."
                    }
                }
            }
        },
        "whitelist": {
            "type": "array",
            "title": "Whitelist",
            "description": "List of codes allowed in the output.",
            "items": {
                "$ref": "#/definitions/code"
            },
            "default": "[]"
        },
        "blacklist": {
            "type": "array",
            "title": "Blacklist",
            "description": "List of codes not allowed in the output.",
            "items": {
                "$ref": "#/definitions/code"
            },
            "default": "[]"
        }
    },
    "properties": {
        "schema": {
            "type": "object",
            "name": "Domains Input",
            "description": "Input of 'domains' service.",
            "properties": {
                "datasource": {
                    "$ref": "#/definitions/datasource"
                },
                "lang": {
                    "$ref": "#/definitions/lang"
                },
                "group_code": {
                    "title": "Domain code",
                    "$ref": "#/definitions/code"
                },
                "whitelist": {
                    "$ref": "#/definitions/whitelist"
                },
                "blacklist": {
                    "$ref": "#/definitions/blacklist"
                }
            }
        }
    }
}